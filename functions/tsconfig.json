{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2020",
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "./*"
            ]
        },
        "types": [
            "@types/node",
            "jest"
        ]
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "lib"
    ]
}
